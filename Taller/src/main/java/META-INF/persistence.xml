<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="compnet_pf">
		<class>com.sebas.taller.model.hr.Employee</class>
		<class>com.sebas.taller.model.person.Address</class>
		<class>com.sebas.taller.model.person.Businessentityaddress</class>
		<class>com.sebas.taller.model.person.Countryregion</class>
		<class>com.sebas.taller.model.person.Person</class>
		<class>com.sebas.taller.model.person.Stateprovince</class>
		<class>com.sebas.taller.model.sales.Salestaxrate</class>
		<class>com.sebas.taller.model.sales.Salesterritory</class>
		<class>com.sebas.taller.model.sales.Salesorderheader</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		
		<properties>
            <property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.show_sql" value="true"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/compnet_pf"/>
			<property name="javax.persistence.jdbc.user" value="postgres"/>
			<property name="javax.persistence.jdbc.password" value="postgres"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
